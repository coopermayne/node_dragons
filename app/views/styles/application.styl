// No more vendor prefixes. http://visionmedia.github.com/nib/

@import 'nib'

body
  background grey

canvas
  background black

#controlPanel
  //display none
  position absolute
  background rgba(255,255,255,0.7)
  padding 10px
  font-size 16px
  width 500px
  right 0
  left 0
  margin 0 auto
  box-shadow 5px 5px 10px 1px rgba(255,255,255,0.2)
  top 58px

#controlPanel h3
  margin 5px 0 8px 0
  //text-align center

#controlPanel h3 span
  font-weight normal
  float right
#controlPanel h3 span:hover
  cursor pointer

tr td:first-child
  padding 10px 0 0 0
  width: 32%

form
  width 90%
  margin 0 auto

table
  width 100%

table td
  border-bottom 1px grey dashed
  padding 5px 0 

input[type=text]
  display inline
  width 50px
input.output
  width 180px

form #submit
  margin 25px auto 0 140px
  width 130px
  height 60px
  padding 20px

#controlPanelHandle
  text-align right

#home-view
  width 100%
  max-width 700px
  margin 0 auto

#info
  font-variant small-caps
  font-size 20px
  color white
  background black
  padding 15px
  border-bottom 2px grey solid

#info a
  color white
a
  float right

[class*="black-"]
  display inline-block
  width 32px
  height 32px
  background-image url(../images/sprites_black.png)
  background-repeat no-repeat

.black-pencil {
  background-position -240px 0;
  width 32px;
}
.black-pencil2 {
  background-position -288px 0;
  width 32px;
}

[class*="icon-"]
  display inline-block
  width 32px
  height 32px
  background-image url(../images/sprites.png)
  background-repeat no-repeat

#toggleControls
  float right
#toggleControls:hover
  cursor pointer

.icon-settings
