// No more vendor prefixes. http://visionmedia.github.com/nib/

@import 'nib'
@import 'http://weloveiconfonts.com/api/?family=iconicstroke'

body
  background: grey

canvas
  background: black
  //width: 400px
  //height: 400px

#controlPanel
  position: fixed
  background: rgba(255,255,255,0.7)
  padding: 10px
  font-size: 16px
  display: none

table td
  padding: 5px

input[type=submit]
  position: relative
  margin-right: 0

input[type=text]
  display: inline
  width: 50px
input.output
  width: 180px

#controlPanelHandle
  text-align: right

#home-view
  width: 100%
  max-width: 700px
  margin: 0 auto

#info
  font-variant: small-caps
  font-size: 16px
  color: white
  background: black
  padding: 7px
#info a
  color: white
a
  float: right


/* iconicstroke */
[class*="iconicstroke-"]:before
  font-family: 'IconicStroke', sans-serif
  color: white
